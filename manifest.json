{
    "manifest_version": 2,
    "name": "voice",
    "version": "0.1.0",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["popup.css"]
        }   
    ],
    "background": {
        "scripts": ["main.py"],
        "persistent": false
    }
}